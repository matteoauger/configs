// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "icon_theme": "JetBrains New UI Icons (Dark)",

    // Panels
    "git_panel": {
        "dock": "left",
        "default_width": 500
    },
    "collaboration_panel": {
        "dock": "right",
        "default_width": 500
    },
    "outline_panel": {
        "dock": "left",
        "default_width": 500
    },
    "project_panel": {
        "dock": "left",
        "indent_guides": {
            "show": "never"
        },
        "default_width": 500,
        "show_diagnostics": "errors"
    },
    "agent": {
        "dock": "right",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        }
    },
    // UI & fonts
    "ui_font_size": 16,
    "buffer_font_size": 14,
    "ui_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "tab_size": 4,
    "theme": {
        "mode": "system",
        "light": "Fleet Light",
        "dark": "Fleet Dark"
    },

    // EDITING
    "vim_mode": true,
    "relative_line_numbers": true,
    "scrollbar": {
        "show": "never"
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    // Indentation, rainbow indentation
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "format_on_save": "off",
    "preferred_line_length": 120,

    // FEATURES
    "features": {
        // Enables copilot
        "edit_prediction_provider": "copilot"
    },

    // AI
    "edit_predictions": {
        "disabled_globs": [
            "**/.git",
            "**/.svn",
            "**/.hg",
            "**/CVS",
            "**/.DS_Store",
            "**/Thumbs.db",
            "**/.classpath",
            "**/.settings",
            "**/.vscode",
            "**/.idea",
            "**/node_modules",
            "**/.serverless",
            "**/build",
            "**/dist",
            "**/coverage",
            "**/.venv",
            "**/__pycache__",
            "**/.ropeproject",
            "**/.pytest_cache",
            "**/.ruff_cache"
        ],
        "mode": "eager",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null
        }
    }
}
